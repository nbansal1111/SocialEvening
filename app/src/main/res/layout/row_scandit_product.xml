<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tv_code_qty"
            android:orientation="vertical"
            android:padding="12dp">

            <com.project.socialevening.widgets.CustomFontTextView
                android:id="@+id/tv_code_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/iv_cart"
                android:text="Single Piece seat"
                android:textColor="@color/color_text_grey"
                android:textSize="16dp"
                app:customFont="@string/font_medium" />

            <com.project.socialevening.widgets.CustomFontTextView
                android:id="@+id/tv_code_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_productName"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/iv_cart"
                android:text="9 size"
                android:textColor="@color/color_text_grey"
                android:textSize="14dp"
                app:customFont="@string/font_medium" />

            <com.project.socialevening.widgets.CustomFontTextView
                android:id="@+id/tv_code_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_productDesc"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/iv_cart"
                android:text="Rs. 2300"
                android:textColor="@color/color_text_grey"
                android:textSize="14dp"
                app:customFont="@string/font_medium" />


        </LinearLayout>

        <ImageView
            android:id="@+id/iv_edit"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/edit_icon" />

        <com.project.socialevening.widgets.CustomFontTextView
            android:id="@+id/tv_code_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/iv_edit"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@+id/iv_cart"
            android:text="Rs. 2300"
            android:textColor="@color/color_text_grey"
            android:textSize="14dp"
            app:customFont="@string/font_medium" />


    </RelativeLayout>
</android.support.v7.widget.CardView>