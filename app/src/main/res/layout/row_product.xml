<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <com.project.socialevening.widgets.CustomFontTextView
            android:id="@+id/tv_productName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_cart"
            android:text="Single Piece seat"
            android:textColor="@color/color_text_grey"
            android:textSize="16dp"
            app:customFont="@string/font_medium" />

        <com.project.socialevening.widgets.CustomFontTextView
            android:id="@+id/tv_productDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_productName"
            android:layout_toLeftOf="@+id/iv_cart"
            android:text="9 size"
            android:layout_marginTop="2dp"
            android:textColor="@color/color_text_desc"
            android:textSize="14dp"
            app:customFont="@string/font_regular" />

        <com.project.socialevening.widgets.CustomFontTextView
            android:id="@+id/tv_productPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_productDesc"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/iv_cart"
            android:text="Rs. 2300"
            android:textColor="@color/color_discvr_done"
            android:textSize="14dp"
            app:customFont="@string/font_medium" />

        <ImageView
            android:id="@+id/iv_cart"
            android:layout_width="32dp"
            android:elevation="4dp"
            android:padding="5dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/cart_icon" />

    </RelativeLayout>
</LinearLayout>