<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/color_discvr_done">

        <com.project.socialevening.widgets.CustomFontTextView
            android:id="@+id/tv_name"
            style="@style/tv_actionBar_Home"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:textSize="26dp" />

        <com.project.socialevening.widgets.CustomFontTextView
            android:id="@+id/tv_email"
            style="@style/tv_actionBar_Home"
            android:layout_below="@+id/tv_name"
            android:layout_centerHorizontal="true"
            android:textSize="20dp" />
    </RelativeLayout>

    <ScrollView style="@style/match_match">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_home"
                style="@style/ll_drawer_item">

                <ImageView
                    style="@style/iv_drawer_item"
                    android:src="@drawable/home_nav" />

                <com.project.socialevening.widgets.CustomFontTextView
                    style="@style/tv_drawer_item"

                    android:text="@string/home" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_teams"

                style="@style/ll_drawer_item">

                <ImageView
                    style="@style/iv_drawer_item"
                    android:src="@drawable/faq_nav" />

                <com.project.socialevening.widgets.CustomFontTextView
                    style="@style/tv_drawer_item"
                    android:text="@string/your_teams" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_log_out"

                style="@style/ll_drawer_item">

                <ImageView
                    style="@style/iv_drawer_item"
                    android:src="@drawable/orders_nav" />

                <com.project.socialevening.widgets.CustomFontTextView
                    style="@style/tv_drawer_item"
                    android:text="@string/log_out" />
            </LinearLayout>


            <View
                style="@style/view_match_1"
                android:background="@color/bg_gray"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" />

            <RelativeLayout
                android:id="@+id/rl_spread"
                style="@style/rl_drawer_item">

                <com.project.socialevening.widgets.CustomFontTextView
                    style="@style/tv_drawer_item"
                    android:text="@string/spread_world" />

                <ImageView
                    style="@style/iv_drawer_item"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/nav_share" />
            </RelativeLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>